{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "__v",
    "amenities",
    "apartmentDesc",
    "apartmentLoc",
    "apartmentName",
    "apartmentPic",
    "area",
    "availableFrom",
    "availableTill",
    "bathrooms",
    "kitchen",
    "rent",
    "rooms",
    "securityDeposit"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "__v": {
      "type": "integer"
    },
    "amenities": {
      "type": "string"
    },
    "apartmentDesc": {
      "type": "string"
    },
    "apartmentLoc": {
      "type": "string"
    },
    "apartmentName": {
      "type": "string"
    },
    "apartmentPic": {
      "type": "string"
    },
    "area": {
      "type": "string"
    },
    "availableFrom": {
      "$ref": "#/$defs/Date"
    },
    "availableTill": {
      "$ref": "#/$defs/Date"
    },
    "bathrooms": {
      "type": "integer"
    },
    "kitchen": {
      "type": "integer"
    },
    "rent": {
      "type": "string"
    },
    "rooms": {
      "type": "integer"
    },
    "securityDeposit": {
      "type": "string"
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    },
    "Date": {
      "type": "object",
      "properties": {
        "$date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "$date"
      ],
      "additionalProperties": false
    }
  }
}